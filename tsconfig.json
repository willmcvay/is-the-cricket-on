{
	"compileOnSave": false,
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"jsx": "preserve",
		"strict": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"allowJs": true,
		"baseUrl": "./",
		"typeRoots": ["shared/types", "node_modules/@types" ],
		"lib": [ "dom", "es2015", "es2016", "esnext.asynciterable" ]
	},
	"exclude": [
		"node_modules",
		"__tests__",
		"next.config.js",
		"scripts"
	]
}
