{
  "name": "is-the-cricket-on",
  "version": "1.0.0",
  "description": "An app for cricket fans",
  "main": "./server/index.ts",
  "repository": "https://github.com/willmcvay/is-the-cricket-on",
  "author": "Will McVay <willmcvay@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "yarn clean-cache && yarn generate-graphql && nodemon server/index.ts --watch server --exec ts-node --typeCheck --compilerOptions '{\"module\":\"commonjs\"}'",
    "build": "yarn generate-graphq && NODE_ENV=production next build && tsc --project scripts/tsconfig.server.json",
    "start": "NODE_ENV=production node .next/production-server/index.js",
    "clean-cache": "rm -rf ./node_modules/.cache && rm -rf ./cache-loader",
    "precommit": "yarn lint",
    "lint": "tslint --fix --project tsconfig.json --format stylish && prettier --write './**/*.{ts,tsx}'",
    "test": "jest --verbose --coverage",
    "test-dev": "jest --watch",
    "generate-graphql": "yarn generate-schema && yarn generate-types",
    "generate-schema": "apollo-codegen introspect-schema shared/graphql/schema.graphql --output shared/graphql/schema.json",
    "generate-types": "gql-gen --schema shared/graphql/schema.json --template graphql-codegen-typescript-template --out ./shared/types/queries.ts"
  },
  "private": false,
  "dependencies": {
    "apollo-boost": "0.1.16",
    "apollo-server-express": "2.1.0",
    "dotenv": "6.0.0",
    "express": "4.16.3",
    "graphql": "14.0.2",
    "graphql-tools": "4.0.0",
    "isomorphic-unfetch": "3.0.0",
    "next": "7.0.0",
    "next-with-apollo": "3.1.3",
    "react": "16.5.2",
    "react-apollo": "2.1.11",
    "react-dom": "16.5.2",
    "redis": "2.8.0"
  },
  "devDependencies": {
    "@babel/core": "7.1.0",
    "@types/enzyme": "3.1.14",
    "@types/express": "4.16.0",
    "@types/jest": "23.3.2",
    "@types/next": "6.1.6",
    "@types/node": "10.10.1",
    "@types/react": "16.4.14",
    "@types/react-dom": "16.0.7",
    "@types/redis": "2.8.6",
    "@zeit/next-typescript": "1.1.1",
    "apollo-codegen": "^0.20.2",
    "babel-jest": "^23.6.0",
    "babel-loader": "8.0.2",
    "babel-plugin-import-graphql": "2.6.2",
    "enzyme": "3.6.0",
    "enzyme-adapter-react-16": "1.5.0",
    "enzyme-to-json": "3.3.4",
    "graphql-code-generator": "^0.12.5",
    "graphql-codegen-typescript-template": "^0.12.5",
    "graphql-tag": "2.9.2",
    "husky": "0.14.3",
    "jest": "23.6.0",
    "nodemon": "1.18.4",
    "prettier": "1.14.3",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "tslint-config-standard": "8.0.1",
    "tslint-plugin-prettier": "2.0.0",
    "typescript": "3.0.3",
    "typescript-babel-jest": "1.0.5"
  },
  "jest": {
    "verbose": false,
    "setupFiles": [
      "./scripts/jest-setup.js"
    ],
    "transform": {
      "^.+\\.tsx?$": "babel-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "modulePathIgnorePatterns": [
      "<rootDir>[/\\\\](next|node_modules)[/\\\\]"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testURL": "http://localhost/",
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/__tests__/stubs/"
    ]
  }
}
